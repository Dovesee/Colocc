<Window x:Class="Colocc.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"  
        prism:ViewModelLocator.AutoWireViewModel="True"  WindowStyle="ToolWindow" Topmost="True"
        Title="{Binding Title}" Height="125" Width="225" Name="mian"  Closing="Mian_Closing"  >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel  Margin="5">
                <CheckBox IsChecked="{Binding IsOpenRun}">开机自启动</CheckBox>
                <TextBlock Margin="0 5" Text="{Binding Message}" TextWrapping="Wrap"/>

            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock>工作时间</TextBlock>
                <TextBox Text="{Binding WorkTime}" BorderThickness="0"></TextBox>
                <TextBlock>休息时间</TextBlock>
                <TextBox Text="{Binding FreeTime}" BorderThickness="0"></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
